{% liquid 
    assign pt = section.settings.pt | prepend: 'pt-'
    assign pb = section.settings.pb | prepend: 'pb-'
    assign mt = section.settings.mt | prepend: 'mt-'
    assign mb = section.settings.mb | prepend: 'mb-'
%}

<div 
    id="html-section-{{ section.id }}" 
    class="html-section color-{{ section.settings.color_scheme }} gradient {{ section.settings.text_align }} {{ pt }} {{ pb }} {{ mt }} {{ mb }}">
    <div class="{{ section.settings.container }}">
        {% unless section.settings.title == blank %}
            <h2 class="title mb-4 {{ section.settings.title_size }}">
                {{ section.settings.title }}
              {% if section.settings.custom_svg_fe != blank %}
                  <div class="fe_h2_svg">
                      <span 
                          style="fill:{{ section.settings.colorfeh2 }}; width:{{ section.settings.widthfeh2 }}rem;" {% if settings.effect_apply_enable%} data-aos="{{ settings.animation_name }}" 
                          data-aos-delay="600"{% endif %}> 
                          {{ section.settings.custom_svg_fe }}
                      </span>
                  </div>
              {% endif %}
            </h2>
        {% endunless %}
        {% unless section.settings.description == blank %}
            <div class="description rte mt-n3 mb-7 {{ section.settings.description_size }}">
                {{ section.settings.description }}
            </div>
        {% endunless %}
        {{ section.settings.html }}

        {% unless section.settings.btn_text == blank %}
          <div class="html-button mt-5 mb-7">
            <a 
                class="button m-2 {% if section.settings.button_style_secondary %}button--secondary{% else %}button--primary{% endif %}"  
                href="{{ section.settings.btn_url }}">
                {{ section.settings.btn_text }}
            </a>
        {% endunless %}
        {% unless section.settings.btn_secondary_text == blank %}
            <a 
                class="button m-2 {% if section.settings.button_style_secondary2 %}button--secondary{% else %}button--primary{% endif %}"  
                href="{{ section.settings.btn_secondary_url }}">
                {{ section.settings.btn_secondary_text }}
            </a>
          </div>
        {% endunless %}
    </div>
</div>

  
