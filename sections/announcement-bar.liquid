{{ 'section-announcement-bar.css' | asset_url | stylesheet_tag }}
{%- if section.blocks.size > 0 -%}
  {%- comment -%}
  ------------------------------------------------------------------------------------------------------------------------
  CSS
  ------------------------------------------------------------------------------------------------------------------------
  {%- endcomment -%}
  
  {%- style -%}
    
    {%- if section.settings.enable_sticky -%}
      .shopify-section--announcement-bar {
        position: sticky;
        top: 0;
        z-index: 4;
      }
    {%- endif -%}

    @media (prefers-reduced-motion: no-preference) {
      .announcement-bar__item {
        animation: slidingBA {{ section.settings.scrolling_speed }}s linear infinite;
        }
      }
  {%- endstyle -%}

  {%- comment -%}
  ------------------------------------------------------------------------------------------------------------------------
  LIQUID
  ------------------------------------------------------------------------------------------------------------------------
  {%- endcomment -%}

  <height-observer variable="announcement-bar">
    <div class="announcement-bar {{ section.settings.font_weight }}" style="background:{{ section.settings.background }}; color:{{ section.settings.text_color }}">
      {%- if section.settings.navigation_mode == 'scrolling' -%}
        <marquee-text scrolling-speed="{{ section.settings.scrolling_speed }}" class="announcement-bar__scrolling-list">
          {%- capture content -%}
            {%- for block in section.blocks -%}
              <p class="{{ section.settings.text_size }}" {{ block.shopify_attributes }}>
                {%- if block.settings.url != blank -%}
                  <a href="{{ block.settings.url }}">{{ block.settings.text | escape }}</a>
                {%- else -%}
                  {{ block.settings.text | escape }}
                {%- endif -%}
              </p>
              <span class="shape-circle shape--sm"></span>
            {%- endfor -%}
          {%- endcapture -%}
          {%- for i in (1..10) -%}
            <span class="announcement-bar__item" {% unless forloop.first %}aria-hidden="true"{% endunless %}>
              {{- content -}}
            </span>
          {%- endfor -%}
        </marquee-text>
      {%- else -%}
        <div class="container">
          <div class="announcement-bar__wrapper">    
            <announcement-bar swipeable id="announcement-bar" class="announcement-bar__static-list">
              {%- for block in section.blocks -%}
                {% if block.settings.flash_band_enable%}
                  <p class="effect_flash  {{ section.settings.text_size }} {% unless forloop.first %}reveal-invisible{% endunless %}" {{ block.shopify_attributes }}>
                {% else %}
                  <p class=" {{ section.settings.text_size }} {% unless forloop.first %}reveal-invisible{% endunless %}" {{ block.shopify_attributes }}>
                {%- endif -%}
                    {%- if block.settings.url != blank -%}
                      <a href="{{ block.settings.url }}">{{ block.settings.text | escape }}</a>&nbsp; 
                      {%- if block.settings.show_icon_annonce != true -%}
                        {% render 'icon-arrow' %}
                      {%- endif -%}
                    {%- else -%}
                      {{ block.settings.text | escape }}
                    {%- endif -%}
                  </p>
              {%- endfor -%}
            </announcement-bar>
          </div>
        </div>
      {%- endif -%}
    </div>
  </height-observer>
{%- endif -%}


{% schema %}
{
  "name": "Barre d'annonces",
  "class": "shopify-section--announcement-bar",
  "tag": "aside",
  "max_blocks": 5,
  "blocks": [
    {
      "type": "message",
      "name": "Message",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Texte",
          "default": "Annoncez quelque chose ici"
        },
        {
          "type": "header",
          "content": "Effect Flash du texte "
        },
        {
          "type": "checkbox",
          "id": "flash_band_enable",
          "label": "Enable"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Lien"
        },
        {
          "type": "checkbox",
          "id": "show_icon_annonce",
          "label": "Cacher l'icône",
          "default": false
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_sticky",
      "label": "Activer la barre collante",
      "default": false
    },
    {
      "type": "select",
      "id": "text_size",
      "label": "Taille du texte",
      "options": [
        {
          "value": "text-xs",
          "label": "Small"
        },
        {
          "value": "text-base",
          "label": "Medium"
        },
        {
          "value": "text-lg",
          "label": "Large"
        }
      ],
      "default": "text-base"
    },
    {
      "type": "select",
      "id": "navigation_mode",
      "label": "Navigation dans plusieurs messages",
      "options": [
        {
          "value": "arrows",
          "label": "fixe"
        },
        {
          "value": "scrolling",
          "label": "Auto-scrolling"
        }
      ],
      "default": "arrows"
    },
    {
      "type": "paragraph",
      "content": "Si vous choisissez fixe, alors un seul message s'affichera"
    },
    {
      "type": "range",
      "id": "scrolling_speed",
      "label": "Vitesse de défilement",
      "min": 10,
      "max": 40,
      "unit": "s",
      "default": 20
    },
    {
      "type": "header",
      "content": "Couleurs"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Couleur arrière-plan"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Couleur du texte"
    }
  ]
}
{% endschema %}