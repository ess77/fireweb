                    </svg>
                    {% endif %}
                  {% endif %}
                {% endfor %}
              
                
                {%- if block.settings.text != blank -%}
                    <div class="spr-review-content">
                      <div class="spr-review-content-wrap spr_review_content_scroll">
                          <div class="spr-review-content-body">{{ block.settings.text }}</div>
                            <div class="spr_review_slide_scroll_svg_warp">
                				<svg class="Icon Icon--arrow-bottom" viewBox="0 0 21 11">
            					<polyline fill="none" stroke="currentColor" points="0.5 0.5 10.5 10.5 20.5 0.5"></polyline>
                				</svg>
                    		</div>  
                      </div>
                      <div class="spr_review_slide_below_bg">
                		<div class="spr_review_below_bg_svg_wrap"> <span></span></div> 
                      </div>
                    </div>
