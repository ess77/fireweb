{% if section.settings.header_bottom_menu != false %}
  header .list-menu__item--active {
    text-decoration: underline;
    text-underline-offset: 0.3rem;
    text-decoration-thickness: 0.2rem;
  }
  .header__active-menu-item {
    transition: text-decoration-thickness var(--duration-short) ease;
    color: rgb(var(--color-foreground));
    text-decoration: underline;
    text-underline-offset: 0.3rem;
    text-decoration-thickness: 0.2rem;
    font-weight: 700;
  }
{% endif %}

{% if section.settings.header_animation_hover != false %}
  {% if section.settings.header_style_hover == "classic" %}
    /* ••••• Header ••••• */
    .header__menu-item:hover span {
      text-decoration: underline;
      text-underline-offset: 0.3rem;
      text-decoration-thickness: 0.2rem;
    }
  {% elsif section.settings.header_style_hover== "animation" %}
    /* ••••• Animation générique ••••• */
    header .underline {
      position: relative;
    }
    header .underline::before {
      content: '';
      position: absolute;
      width: 0;
      bottom: -2px;
      background-color: rgb(var(--color-foreground));
      height: 2px; /* Option */
      {% if section.settings.header_type_animation == "animation-1" %}
        right: 0;
        transition: width 0.6s cubic-bezier(0.25, 1, 0.5, 1);
      {% elsif section.settings.header_type_animation == "animation-2" %}
        transition: all .3s;
      {% endif %}
    }
    @media (hover: hover) and (any-pointer: fine) {
      header .underline:hover::before {
        {% if section.settings.header_type_animation == "animation-1" %}
          left: 0;
          right: auto;
        {% endif %}
        width: 100%;
      }
    }

    /* ••••• Header ••••• */
    .header__menu-item:hover .header__active-menu-item:before {
      display: none;
    }
  {% endif %}
{% endif %}
